{
    "provider": {
        "name": "userservice"
    },
    "consumer": {
        "name": "myuserclient"
    },
    "interactions": [
        {
            "description": "a request to create Hans Oberlander",
            "request": {
                "method": "POST",
                "path": "/user-service/users",
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "firstName": "Hans",
                    "id": 4711,
                    "lastName": "Oberlander"
                },
                "matchingRules": {
                    "body": {
                        "$.firstName": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.id": {
                            "matchers": [
                                {
                                    "match": "integer"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.lastName": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "header": {
                        
                    },
                    "path": {
                        
                    }
                }
            },
            "response": {
                "status": 400
            },
            "providerStates": [
                {
                    "name": "person Hans Oberlander exists"
                }
            ]
        },
        {
            "description": "a request to POST a person",
            "request": {
                "method": "POST",
                "path": "/user-service/users",
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "firstName": "Arthur",
                    "id": 42,
                    "lastName": "Dent"
                },
                "matchingRules": {
                    "body": {
                        "$.firstName": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.lastName": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.id": {
                            "matchers": [
                                {
                                    "match": "integer"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "path": {
                        
                    },
                    "header": {
                        
                    }
                }
            },
            "response": {
                "status": 201,
                "headers": {
                    "Content-Type": "application/json;charset=UTF-8"
                },
                "body": {
                    "id": 42
                },
                "matchingRules": {
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application/json;charset=UTF-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "body": {
                        "$.id": {
                            "matchers": [
                                {
                                    "match": "integer"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "provider accepts a new person"
                }
            ]
        }
    ],
    "metadata": {
        "pactSpecification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.20"
        }
    }
}